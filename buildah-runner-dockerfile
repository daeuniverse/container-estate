FROM summerwind/actions-runner-dind:ubuntu-22.04

LABEL SOURCE_IMAGE=https://github.com/actions/actions-runner-controller/blob/master/runner/actions-runner.ubuntu-22.04.dockerfile
      MAINTAINER=@yqlbu

RUN sudo apt update -y && \
    sudo apt-get install -y --no-install-recommends && \
    buildah
    
RUN echo 'unqualified-search-registries = ["docker.io"]' | sudo tee -a /etc/containers/registries.conf

RUN sudo apt-get clean autoclean && \
    sudo apt-get autoremove -y && \
    sudo rm -rf /var/lib/{apt,dpkg,cache,log}/

USER runner
WORKDIR /home/runner
